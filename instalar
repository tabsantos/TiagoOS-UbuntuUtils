echo " "
echo "Incluindo canonical-livepatch: "
sudo snap install canonical-livepatch
sudo canonical-livepatch enable dc48425e242e4fa188ed29450a403009


echo " " 
echo "instalando arquivos compilados MrBayes MPI e RevBayes e script atualizar: " 
chmod 755 mb && sudo cp mb /usr/bin/
